*
    margin 0
    padding 0
    box-sizing border-box

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

.firstPage
    background-image: url("../images/scene/streeartParis.jpg")
    background-position: center top
    background-repeat: no-repeat
    background-size: cover
    line-height: 2.5
    padding: 10vw 2em
    text-align: right
    font-family: "Helvetica", "Arial", sans-serif
    position: absolute
    width: 100%
    height: 100%
    z-index: 7
    pointer-events: none

    h1
        color: #35547B
        font-size: 2em
        font-weight: 500

    .text
        display: flex
        justify-content: flex-end
        padding-bottom: 10px

        h3
            color: #fff
            width: 25%
            text-align: justify
            font-size: 1em
            line-height: 2em

    a
        border: 1px solid #35547B
        border-radius: 290486px
        color: white
        font-size: 0.6em
        letter-spacing: 0.2em
        padding: 2em 4em
        text-transform: uppercase
        text-decoration: none
        transition: none 200ms ease-out
        transition-property: color, background
        cursor pointer
        pointer-events: auto

    // a&hover
    // background: #35547B
    // color: white


canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%

button
    position: absolute
    width: 50px
    height: 50px
    top: 3%
    left: 3%
    border: 2px solid #00000000
    background-color: rgba(255,255,255,0)
    border-radius: 50%
    z-index 5
    cursor pointer
    outline: none

.camera-btn img
    width: 80%
    height: 80%