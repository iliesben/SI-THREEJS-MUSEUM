*
    margin 0
    padding 0
    box-sizing border-box

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%

button
    position: absolute;
    width: 50px;
    height: 50px;
    top: 3%;
    left: 3%;
    border: 2px solid #00000000;
    background-color: rgba(255,255,255,0);
    border-radius: 50%;
    z-index 99
    cursor pointer
    outline: none;

.camera-btn img
    width: 80%;
    height: 80%;